@import 'vars'
@import 'bootstrap'

@import 'mixins'
@import 'grid'
@import 'scaffolding'
@import 'footer'
@import 'vertical_space'
@import 'sliders'

xs-grid-column(80px)

// ^: Custom classes

.cf
  clearfix()

.ttr
  float: right

// $: Custom classes


// ^: Lists

ul
  list-style: none
  margin: 0
  padding: 0

.projects
  margin-left: -0.25em

.projects li
  margin-left: 0.25em

  +sm-screen()
    display: inline-block

// $: Lists


// ^: Icons

.icon
  font-size: 1.25em
  line-height: inherit

  +sm-screen()
    font-size: 1.2em

span + .icon,
.icon + span
  margin-left: 0.4em

// $: Icons


.section-headline
  font-size: 1.33em
  line-height: 1
  margin: 0

.section-header
  line-height: 20px

  .prev,
  .next
    display: block
    float: left
    width: 85px

  .next
    margin-left: 25px

.icon
  +sm-screen()
    margin: 0 0.3em 0 0

.slide--index .slider-nav
  visibility: hidden

.links

  +xs-screen()
    border: solid $c-text
    border-width: 1px 0
    padding: 25px 0
    text-align: center

.links li

  +xs-screen()
    display: inline-block

.separator
  background: $c-text
  border-radius: 50%
  display: inline-block
  height: 4px
  margin: 6px 10px 0
  vertical-align: top
  width: 4px

  +sm-screen()
    display: none

.section-body
  line-height: 1.5em

  .links
    width: 155px

  .links li
    border solid $c-text
    border-width: 1px 0
    padding: 10px 0 7px

  .links li + li
    border-top: 0

.photo
  border-radius: 8px

.team-member
  padding-left: 65px
  position: relative

  .section-headline
    margin-bottom: 0.4em

  p
    line-height: 1

  .photo
    border-radius: 4px
    left: 0
    position: absolute
    top: 18px

  +sm-screen()
    padding-left: 0
    position: static

.openable .section-headline

  +xs-screen()
    font-size: inherit
    line-height: 20px
    margin: 0

.open .plus,
.when-opened,
.openable .minus
  display: none

  +sm-screen()
    display: block

.open .when-opened,
.open .minus
  display: block

.credits .name
  margin-right: 5px

.project-links
  border solid $c-text
  border-width: 1px 0
  padding: 25px 0
  text-align: center

  +sm-screen()
    text-align: left

.project-links li

  &,
  &.separator
    display: inline-block

.project-image
  display: block
  height: 389px
  margin: 0 auto
  width: 260px

  +xs-screen()
    img-responsive()

.project-image-wrapper .project-image
  left: -43px
  position: relative

